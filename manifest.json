{
    "manifest_version": 2,
    "name": "SnapStorage",
    "version": "0.1",
    "description": "It's a simple utility that allows you to quickly set, reset, or clear the LocalStorage, SessionStorage, and cookies in your browser.",
    "icons": {
        "48": "icons/logo-48.png"
    },
    "permissions": [
        "activeTab", "storage"
    ],
    "browser_action": {
        "default_icon": "icons/logo-32.png",
        "default_title": "SnapStorage",
        "default_popup": "popup/snap-storage.html"
    },
	"browser_specific_settings": {
